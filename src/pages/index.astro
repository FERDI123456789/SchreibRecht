---
import Layout from "../layouts/Layout.astro";
import "@/styles/global.css";
---

<Layout
  title="SchreibRecht - Verbessere dein Schreiben und Lesen einfacher denn je!"
>
  <header>
    <!-- Container -->
    <div class="mx-auto xl:w-[90%] px-12 py-16 xl:px-32 md:py-20 md:pt-44">
      <div class="absolute inset-0 -z-10 overflow-hidden max-w-7xl mx-auto">
        <svg
          class="rotate-[130deg] absolute left-[max(50%,25rem)] top-5 h-[50rem] w-[128rem] -translate-x-1/2 stroke-primary [mask-image:radial-gradient(64rem_64rem_at_bottom,white,transparent)]"
          aria-hidden="true"
        >
          <defs>
            <pattern
              id="pattern-id"
              width="200"
              height="200"
              x="50%"
              y="-1"
              patternUnits="userSpaceOnUse"
            >
              <path d="M100 200V.5M.5 .5H200" fill="none"></path>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#pattern-id)"></rect>
        </svg>
      </div>
      <!-- Component -->
      <div class="grid items-center gap-8 sm:gap-16 xl:grid-cols-2">
        <div>
          <!-- Hero Info -->
          <div
            class="flex justify-between sm:justify-center xl:justify-start sm:gap-8 lg:gap-12 mb-1"
          >
            <div class="flex items-center">
              <img
                src="https://assets.website-files.com/6458c625291a94a195e6cf3a/6458c625291a9481ece6cf9c_Vector%20(9).svg"
                alt=""
                class="mr-1 inline-block sm:mr-2"
              />
              <p class="text-sm">LRS Hilfe</p>
            </div>
            <div class="flex items-center">
              <img
                src="https://assets.website-files.com/6458c625291a94a195e6cf3a/6458c625291a9481ece6cf9c_Vector%20(9).svg"
                alt=""
                class="mr-1 inline-block sm:mr-2"
              />
              <p class="text-sm">Kostenloss</p>
            </div>
            <div class="flex items-center">
              <img
                src="https://assets.website-files.com/6458c625291a94a195e6cf3a/6458c625291a9481ece6cf9c_Vector%20(9).svg"
                alt=""
                class="mr-1 inline-block sm:mr-2"
              />
              <p class="text-sm">Einfach</p>
            </div>
          </div>
          <!-- Title -->
          <h1
            class="mb-4 text-4xl font-bold xl:text-start text-center md:text-5xl md:leading-tight bg-white"
          >
            Verbessere dein Schreiben und Lesen einfacher denn je!
          </h1>
          <p
            class="mb-6 max-w-lg text-sm text-gray-500 text-center xl:text-start mx-auto xl:mx-0 sm:text-xl md:mb-8 bg-white"
          >
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde, quos?
            Cum explicabo non beatae.
          </p>
          <!-- Testimonial -->
          <div
            class="mb-6 flex w-full max-w-xs items-center md:mb-10 lg:mb-12 bg-white mx-auto xl:mx-0"
          >
            <img
              src="https://firebasestorage.googleapis.com/v0/b/flowspark-1f3e0.appspot.com/o/Tailspark%20Images%2FPlaceholder%20Image.svg?alt=media&token=375a1ea3-a8b6-4d63-b975-aac8d0174074"
              alt=""
              class="mr-2 inline-block h-7 w-7 rounded-full object-cover"
            />
            <p class="text-sm font-bold">Aleeyah</p>
            <!-- Divider -->
            <div
